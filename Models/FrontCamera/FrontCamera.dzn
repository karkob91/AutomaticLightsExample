interface IFrontCamera {
    out void CarDetected();
    out void CarPassed();
    enum State {Detected, NotDetected};

    behavior {
        State state = State.NotDetected;

        [state.NotDetected] {
            on inevitable: {
                state = State.Detected;
                CarDetected;
            }
        }
        [state.Detected] {
            on inevitable: {
                state = State.NotDetected;
                CarPassed;
            }
        }
    }
}