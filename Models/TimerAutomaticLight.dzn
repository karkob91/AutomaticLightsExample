interface ITimerAutomaticLight
{
  in void Create();
  in void Cancel();
  out void Timeout();
  enum State {Idle, Active};

  behaviour
  {
    State state = State.Idle;

    on Create: state = State.Active;
    on Cancel: state = State.Idle;
    [state.Active] {
        on inevitable: {
            state = State.Idle; 
            Timeout;
        }
    }
  }
}

component TimerAutomaticLightComponent {
    provides ITimerAutomaticLight api;
}