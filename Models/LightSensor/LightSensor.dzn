interface ILightSensor {
    out void LowLight();
    out void HighLight();
    enum State {Low, High};

    behavior {
        State state = State.High;
        [state.High] {
            on inevitable: {
                state = State.Low;
                LowLight;
            }
        }
        [state.Low] {
            on inevitable: {
                state = State.High;
                HighLight;
            }
        }
    }
}